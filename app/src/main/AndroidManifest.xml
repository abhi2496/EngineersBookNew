<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.abhishekkoranne.engineersbook">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".AppEngineerBook"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- <activity android:name=".Activity.LoginActivity"> -->
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"/>
        <activity
            android:name=".Activity.LoginActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".Activity.AddAnswerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.AddArticleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.AddDoubtActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.ApprovalActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.ArticleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.RegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.DoubtsQuestionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.ForgotPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.CompanyHomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.CompanyLoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.RegisterCompanyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.HomeActivity"
            android:windowSoftInputMode="adjustPan">

            <!--
                            <intent-filter>
                            <action android:name="android.intent.action.MAIN" />

                            <category android:name="android.intent.category.LAUNCHER" />
                        </intent-filter>
            -->
        </activity>
        <activity
            android:name=".Activity.ChancellorRegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.FacultyRegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.HODRegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.PrincipalRegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.StudentRegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.ProfileActivity"
            android:screenOrientation="portrait" />

        <service android:name=".service.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".service.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".Activity.ChatActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.ForgotPasswordTokenActivity"></activity>
    </application>

</manifest>