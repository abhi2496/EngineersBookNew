<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#b1efefef"
    android:orientation="vertical"
    android:paddingRight="8dp"
    android:paddingTop="2dp">


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#d3cccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_post"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:paddingRight="4dp"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:text="fkjsdbakfjbdskjbadskjfbkjasdbkjfdskjafkjdsbfkjsdbafkjdsbfkjbaskjfkjasdbkjfbHere question asked by user will be displayed... " />

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="#f2cccccc" />

        <TextView
            android:id="@+id/no_of_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:drawablePadding="4dp"
            android:drawableRight="@drawable/ic_thumb_up_light_blue_700_24dp"
            android:gravity="right|center_vertical"
            android:text="14"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="2dp"
        android:text="30-3-2018 12:15:11"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp" />
</LinearLayout>