<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_activity_gradient"
        tools:context="com.example.jiggy.ab.Activity.ProfileActivity">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/rounded_border_background_white" />

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/abhi_propic" />


        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="274dp"
            android:background="#ffffff" />


        <TextView
            android:id="@+id/my_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/view2"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Your Dashboard"
            android:textColor="#b9000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="310dp">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/search_bar_drawable"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_doubts_asked"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"

                    android:drawablePadding="33dp"
                    android:paddingBottom="1dp"
                    android:text="3"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:paddingTop="2dp"
                    android:text="Doubts Asked"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/search_bar_drawable"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_articles_shared"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"

                    android:drawablePadding="33dp"
                    android:paddingBottom="1dp"
                    android:text="24"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:paddingTop="2dp"
                    android:text="Articles"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@drawable/search_bar_drawable"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_points"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:drawablePadding="33dp"
                    android:paddingBottom="1dp"
                    android:text="13"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:paddingTop="2dp"
                    android:text="Points"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Abhishek Koranne"
            android:textColor="#c1000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_college"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="SVIT"
            android:textColor="#b5000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_uni"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_college"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="GTU"
            android:textColor="#b5000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_enrollment_number"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_uni"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="140410107024"
            android:textColor="#b5000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_career_interest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/my_dashboard"
            android:layout_below="@+id/tableLayout"
            android:layout_marginTop="12dp"
            android:paddingRight="8dp"
            android:text="Career Interests"
            android:textColor="#b9000000"
            android:textSize="18dp"
            android:textStyle="bold" />

       <!-- <TextView
            android:id="@+id/edit_profile"
            android:layout_width="36dp"
            android:layout_height="42dp"
            android:layout_alignTop="@+id/view"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/tv_name"
            android:drawableStart="@drawable/ic_mode_edit_black_18dp" />
-->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_career_interest"
            android:layout_alignBottom="@+id/tv_career_interest"
            android:layout_alignStart="@+id/iv_profile"
            android:layout_marginLeft="8dp"
            android:background="@drawable/search_bar_drawable"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Android"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_articles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/my_dashboard"
            android:layout_below="@+id/tv_career_interest"
            android:layout_marginTop="12dp"
            android:text="Your Articles"
            android:textColor="#b9000000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_articles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/my_dashboard"
            android:layout_below="@+id/tv_articles"
            tools:itemCount="3">

        </android.support.v7.widget.RecyclerView>


        <TextView
            android:id="@+id/your_doubts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/my_dashboard"
            android:layout_below="@+id/rv_articles"
            android:layout_marginTop="12dp"
            android:text="Your Doubts"
            android:textColor="#b9000000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_doubts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/my_dashboard"
            android:layout_below="@+id/your_doubts"
            tools:itemCount="3"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>


